            <p class="card-text"><%=description %></p>
            <p class="card-text">Asked by: <%=username %></p>
            <p class="card-text">total views : <%=views %></p>
            <% if(imageLink!=""){%>
                <img src=<%=imageLink %> alt="" width="60%">
              <%}%>
          </div>
    </div>
